{
  "manifest_version": 3,
  "short_name": "GL CoreAI",
  "name": "GL CoreAI",
  "version": "1.0.4",
  "description": "AI-powered GitLab assistant that summarizes issues and MRs using AI for quick understanding.",
  "options_page": "packs/static/settings.html",
  "background": {
    "service_worker": "packs/js/background.js"
  },
  "author": {
    "name": "Ekohe",
    "email": "encore@ekohe.com"
  },
  "homepage_url": "https://ekohe.com",
  "permissions": ["storage", "identity", "sidePanel", "tabs", "activeTab", "contextMenus", "scripting"],
  "action": {
    "default_title": "Open GL CoreAI",
    "default_popup": "packs/static/popup.html"
  },
  "side_panel": {
    "default_path": "packs/static/index.html"
  },
  "oauth2": {
    "client_id": "813629896769-hq5035855rdk1pvqlspkcfr7l97l019f.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "icons": {
    "16": "static/icons/icon16.png",
    "48": "static/icons/icon48.png",
    "128": "static/icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self';"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["packs/css/inject.css"],
      "js": ["packs/js/inject.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["packs/static/index.html", "packs/*.png", "static/icons/*"],
      "matches": ["<all_urls>", "http://*/*", "https://*/*"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
